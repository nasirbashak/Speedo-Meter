<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="top|center"
    android:background="@color/colorBackground">


    <TextView
        android:id="@+id/TxtViewClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:gravity="top"
        android:text="Timer"
        android:background="@drawable/custombutton"
        android:textColor="@color/colorBackground"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/myTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:gravity="center"
        android:text="m/s"
        android:textColor="@color/colorText"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/myTxtView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="172dp"
        android:gravity="center"
        android:text="Km/hr"
        android:paddingLeft="16dp"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/maxText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:text="max"
            android:textColor="@color/colorText"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/avgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:text="avg"
            android:textColor="@color/colorText"
            android:textSize="30dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/a1"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="32dp"
                android:background="@drawable/line_shape" />

            <Button
                android:id="@+id/a2"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="70dp"
                android:background="@drawable/line_shape" />

            <Button
                android:id="@+id/a3"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="70dp"
                android:background="@drawable/line_shape" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/md_width"
            android:layout_gravity=""
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/f1"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />

            <Button
                android:id="@+id/b1"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />

            <Button
                android:id="@+id/f2"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />

            <Button
                android:id="@+id/b2"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />

            <Button
                android:id="@+id/f3"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />

            <Button
                android:id="@+id/b3"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/g1"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="32dp"
                android:background="@drawable/line_shape" />

            <Button
                android:id="@+id/g2"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="70dp"
                android:background="@drawable/line_shape" />

            <Button
                android:id="@+id/g3"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="70dp"
                android:background="@drawable/line_shape" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/md_width"
            android:layout_gravity=""
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/e1"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />

            <Button
                android:id="@+id/c1"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />

            <Button
                android:id="@+id/e2"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />

            <Button
                android:id="@+id/c2"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />

            <Button
                android:id="@+id/e3"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />

            <Button
                android:id="@+id/c3"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/line_shape"
                android:rotation="90" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/d1"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="32dp"
                android:background="@drawable/line_shape" />

            <Button
                android:id="@+id/d2"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="70dp"
                android:background="@drawable/line_shape" />
            <Button
                android:layout_marginLeft="20dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/line_shape"/>

            <Button
                android:id="@+id/d3"
                android:layout_width="@dimen/md_width"
                android:layout_height="@dimen/md_height"
                android:layout_marginLeft="32dp"
                android:background="@drawable/line_shape" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>